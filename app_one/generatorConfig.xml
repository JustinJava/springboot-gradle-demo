<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">  
<generatorConfiguration>  
    <context id="generator"  targetRuntime="MyBatis3">
        <commentGenerator>  
			<!-- 这个元素主要用来去除指定生成的注释中是否包含生成的日期 false表示保护 -->
			<!-- 如果生成日期，会造成即使仅修改一个字段，整个实体类的属性都会发生变化，不利于版本控制 -->
            <property name="suppressDate" value="true"/>  
            <!-- 是否去除自动生成的注释 true:是 false:否 -->
            <property name="suppressAllComments" value="true"/>  
        </commentGenerator>

        <!--============================================修改要点1：db数据库驱动、URL、用户名、密码============================================= -->
        <!--数据库链接URL，用户名、密码 ，引用properties中的配置或者直接写死均可-->  
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test?useSSL=false"
                        userId="root"
                        password="abc@123456">
        </jdbcConnection>  
        <javaTypeResolver>  
			<!-- 默认false，把JDBC DECIMAL和NUMERIC解析为Integer,为true时则把JDBC DECIMAL和NUMERIC解析为BigDecimal-->  
            <property name="forceBigDecimals" value="false"/>  
        </javaTypeResolver>  
        <!--============================================修改要点2：entity实体包全名============================================= -->  
        <javaModelGenerator targetPackage="com.justin.app.one.entity" targetProject="app_one/src/main/java">
			<!--enableSubPackages:是否让schema作为报名的后缀 -->  
            <property name="enableSubPackages" value="false"/>  
			<!--trimStrings:从数据库返回的值是否去掉前后空格 -->
            <property name="trimStrings" value="true"/>  
        </javaModelGenerator>  
        <!--============================================修改要点3：mapper.xml映射文件路径（config.sqlmap）============================================= -->  
        <sqlMapGenerator targetPackage="config.sqlmap" targetProject="app_one/src/main/resources">
			<!--enableSubPackages:是否让schema作为报名的后缀 -->  
            <property name="enableSubPackages" value="false"/>  
        </sqlMapGenerator>  
        <!--============================================修改要点4：Dao持久层包全名（com.justin.dao）============================================= -->    
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.justin.app.one.dao" targetProject="app_one/src/main/java">
			<!--enableSubPackages:是否让schema作为报名的后缀 -->  
            <property name="enableSubPackages" value="false"/>  
        </javaClientGenerator>  
        <!--============================================修改要点5：schema、表名（tableName）、实体名（domainObjectName）============================================= -->    
		<!-- *ByExample封装了各种用于操作数据库的条件，默认true，不需要则设置为false -->
        <table schema="test" tableName="demo_info" domainObjectName="DemoInfo"
               enableCountByExample="true"
               enableUpdateByExample="true"
               enableDeleteByExample="true"
               enableSelectByExample="true"
               selectByExampleQueryId="true">
        </table>
    </context>
</generatorConfiguration>  